<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.architecture.AndroidArchitecture">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_50ssp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_mvc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onSelectorClicked"
            android:text="@string/five_mvc_architecture"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_mvp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onSelectorClicked"
            android:text="@string/five_mvp_architecture"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_mvvm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onSelectorClicked"
            android:text="@string/five_mvvm_architecture"
            android:textStyle="bold"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>