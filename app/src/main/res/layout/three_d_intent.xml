<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.intent_activity_fragment.IntentClass">

    <Button
        android:id="@+id/intent_implicit"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/three_d_implicit_intent"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/intent_input"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="@string/three_d_enter_your_name"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/intent_explicit"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/three_d_explicit_intent"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold" />

</LinearLayout>