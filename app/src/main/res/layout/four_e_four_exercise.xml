<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.other_layout.FourExercise">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_10ssp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_nested_scroll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/my_edittext"
                android:gravity="center"
                android:padding="8dp"
                android:onClick="onTopicClicked"
                android:text="@string/four_nested_scroll_view"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_18ssp" />

            <TextView
                android:id="@+id/txt_search_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/my_edittext"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/four_search_view"
                android:onClick="onTopicClicked"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_18ssp" />

            <TextView
                android:id="@+id/txt_web_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/my_edittext"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/four_webview"
                android:onClick="onTopicClicked"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_18ssp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>