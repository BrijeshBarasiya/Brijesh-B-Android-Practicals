<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.intent_activity_fragment.IntentActivityFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/demo_intent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/my_edittext"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/three_d_intent"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_18ssp" />

            <TextView
                android:id="@+id/demo_life_cycle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/my_edittext"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/three_d_life_cycle"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_18ssp" />

            <TextView
                android:id="@+id/practical_one"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/my_edittext"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/three_d_practical_1"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_18ssp" />

            <TextView
                android:id="@+id/practical_two"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/my_edittext"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/three_d_practical_2"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_18ssp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>