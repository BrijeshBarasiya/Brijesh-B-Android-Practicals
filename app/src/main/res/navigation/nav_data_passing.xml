    android:id="@+id/nav_data_passing"
    app:startDestination="@id/dataPassingTo">

    <fragment
        android:id="@+id/dataPassingTo"
        android:name="com.example.fragment_datapassing.DataPassingTo"
        android:label="other_data_passing_to"
