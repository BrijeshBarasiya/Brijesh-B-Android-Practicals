        <action
            android:id="@+id/action_dataPassingTo_to_dataPassingFrom"
            app:destination="@id/dataPassingFrom" />
    </fragment>

    <fragment
        android:id="@+id/dataPassingFrom"
        android:name="com.example.fragment_datapassing.DataPassingFrom"
        android:label="other_data_passing_from"
        tools:layout="@layout/other_data_passing_from">
        <argument
            android:name="argument1"
            android:defaultValue="Hello"
            app:argType="string" />
